---
import { type CollectionEntry, getCollection, render } from "astro:content";
import Document from "../layout/Document.astro";

export async function getStaticPaths() {
  const entries = await getCollection("docs");

  return entries.map((entry) => ({
    // TODO(meowesque): Since the paths are only one level deep, this is a temporary fix.
    params: { slug: entry.id.split("/")[1] ?? entry.id.split("/")[0] },
    props: entry,
  }));
}

type Props = CollectionEntry<"docs">;

const { Content, headings } = await render(Astro.props);
---

<Document {...Astro.props.data} headings={headings}>
  <Content />
</Document>
